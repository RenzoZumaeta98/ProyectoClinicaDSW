<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SolClinicaHealth</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
</head>
<body>
    <header>
        
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border text-muted"   >

            <div class="row p-3 align-items-center">
            <div class="col-2 pr-5">
                </div>

                <div class="col-4 pr-5">
                    <div class="row" >
                        <div class="col">
                            <h2>Siguenos</h2>
                        </div>
                        <div class="col">
                            <a><i class="fa-brands fa-facebook" style="font-size: 40px; margin: 7px"></i></a>
                            <a><i class="fa-brands fa-whatsapp" style="font-size: 40px; margin: 7px"></i></a>
                            <a><i class="fa-brands fa-instagram" style="font-size: 40px; margin: 7px"></i></a>
                        </div>
                    </div>
                </div>

                <div class="col-2 pl-5">
                    <div class="row">
                        <a style="font-size: 30px">Nosotros</a>
                    </div>
                    <div class="row">
                        <a style="font-size: 30px">Servicios</a>
                    </div>
                </div>

                <div class="col-4 align-self-center">
                    <div class="row">
                        <img src="../images/Logo.png" style="width: 200px" />
                    </div>
                </div>

            </div>

        
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/locales/bootstrap-datepicker.es.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
