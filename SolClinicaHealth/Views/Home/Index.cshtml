@* //////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////// *@

<div class="modal fade" id="RegistrarModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
	<div class="modal-dialog modal-lg">
		<form method="post" asp-controller="Usuario" asp-action="RegistrarUsuario">
			
			<input type="hidden" asp-for="TipoUsuario" value="1">
			<div class="modal-content">
				<div class="modal-header">
					<h1 class="modal-title fs-5" id="exampleModalLabel">Registro</h1>
					<button type="button" class="btn-close" data-dismiss="modal" aria-label="Close"></button>
				</div>

				<div class="form-group text-center m-2">
					<img src="~/images/logoangelashealth.png" alt="140" width="340" />
				</div>


				<div class="modal-body">



					<div class="row">

						<div class="col">

							<label asp-for="NombreUsuario">Nombre</label>
							<input type="text" asp-for="NombreUsuario" required class="form-control">
						</div>
						<div class="col">
							<label asp-for="CorreoUsuario">Correo</label>
							<input placeholder="demo@demo.com" asp-for="CorreoUsuario" required type="text" class="form-control">
						</div>
						<div class="col">

							<label asp-for="DireccionUsuario">Direccion</label>
							<input type="text" asp-for="DireccionUsuario" required class="form-control">
						</div>		

					</div>

					<div class="row mt-3">

						<div class="col">
							<label asp-for="ApellidoUsuario">Apellido</label>
							<input type="text" asp-for="ApellidoUsuario" required class="form-control">
						</div>

						<div class="col">

							<label asp-for="CelularUsuario">Celular</label>
							<input  type="text" asp-for="CelularUsuario" required class="form-control">
						</div>

						<div class="col">

							<label asp-for="FechaNacUsuario">Fecha de Nacimiento  </label>
							<input placeholder="dd/mm/yyyy" asp-for="FechaNacUsuario" required type="date" class="form-control" id="fecha" style="width:270px">

						
						</div>
						

					</div>

					<div class="row mt-3">

						<div class="col">

							<label asp-for="TipoDocumento">Documento</label>
							<select asp-for="TipoDocumento" style="width:240px; height:40px">
								<option value="" disabled selected>Seleccione documento...</option>
								<option value="1">DNI</option>
								<option value="2">Carne Extranjeria</option>
								<option value="3">Pasaporte</option>
							</select>
							<input placeholder="Numero Documento" asp-for="NroDocumentoUsuario" required type="text" class="form-control mt-3">
						</div>

						<div class="col">
							<label asp-for="GeneroUsuario">Genero</label>
							<select asp-for="GeneroUsuario" style="width:240px; height:40px">
								<option value="" disabled selected>Seleccione genero...</option>
								<option value="F">Femenino</option>
								<option value="M">Masculino</option>
							</select>
						</div>

						<div class="col">
							<label asp-for="ClaveUsuario">Clave</label>
							<input asp-for="ClaveUsuario" required type="password" class="form-control">
						</div>
						

					</div>


					<div class="row mt-3">

						

					</div>

				</div>

				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
					<input type="submit" class="btn btn-primary" value="Registrar">
				</div>

			</div>
		</form>
	</div>
</div>


@* ///////////////////////////////////////////////////////////////////////////////////////////////////////////////////// *@
<div class="modal fade" id="IngresarModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			
			<div class="modal-body">
				<form method="post" asp-controller="Login" asp-action="PaginaUsuario">
					<div class="form-group text-center">
						<h3>LOGIN</h3>
                        <img src="../images/logoangelashealth.png" width="240" />
						<br>
						<label>Bienvenido al sistema</label>
					</div>
					<br>
					<div class="mb-3">
						<label asp-for="CorreoUsuario">Correo</label>
						<input placeholder="demo@demo.com" asp-for="CorreoUsuario" required type="text" class="form-control">
						<div id="emailHelp" class="form-text">Nunca compartiremos tu email con nadie más.</div>
					</div>
					<div class="mb-3">
						<label asp-for="ClaveUsuario">Clave</label>
						<input asp-for="ClaveUsuario" required type="password" class="form-control">
					</div>
					<button type="submit" class="btn btn-danger">Ingresar</button>
					<button type="button" class="btn btn-danger" data-toggle="modal" data-target="">Olvide mi contraseña</button>
				</form>
			</div>
			<div class="modal-footer">
			</div>
		</div>
	</div>
</div>



@section Scripts{

    <script>
        $(document).ready(function () {

            var currentDate = new Date();


            $('#fecha').datepicker({
                format: 'yyyy-mm-dd',
                autoclose: true,
                language: 'es'
            });
        });
    </script>

}




